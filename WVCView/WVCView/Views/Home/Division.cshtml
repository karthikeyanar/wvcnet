@{
	Layout = null;
}
<div ng-controller="DivisionController">
	<div class="page-header">
		<h1 class="page-title">
			Division</h1>
	</div>
	<ul class="breadcrumb">
		<li><i class="fa fa-home"></i><a href="#/home">Home</a><i class="fa fa-angle-right"></i></li>
		<li><a href="#/division">Division</a></li>
		<li class="pull-right"><a href="#" class="close" data-dismiss='breadcrumb'>&times</a></li>
	</ul>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-6">
					<div class="pull-left">
						<span class="pull-left padding-top-5 padding-right-10">Rows</span>
						<select id="rows" name="rows" class="pull-left form-control input-sm input-small">
							<option value="5">5</option>
							<option value="10">10</option>
							<option value="15">15</option>
						</select>
					</div>
					<div class="pull-left">
						<input type="text" class="form-control" placeholder="Search..." />
					</div>
					<div class="pull-left margin-left-10">
						<button class="btn btn-primary">
							Search</button>
					</div>
					<div class="pull-right">
						<button class="btn btn-success">
							Add New</button>
					</div>
				</div>
				<div class="col-md-6">
					<div class="pull-right">
						<ul class="no-margin" twbs-pagination>
						</ul>
					</div>
				</div>
			</div>
			PageIndex {{pageIndex}}
			<table class="table table-striped table-hover table-bordered">
				<thead>
					<tr>
						<th style="width: 50px;">
							ID
						</th>
						<th>
							Name
						</th>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat="row in rows">
						<td>
							{{row.ID}}
						</td>
						<td>
							{{row.Name}}
						</td>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<div class="col-md-4">
					<span>{{pagingStatus}}</span>
				</div>
				<div class="col-md-8">
					<div class="pull-right">
						<ul class="no-margin" twbs-pagination>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
