@{ Layout = null; }
<!-- ko if: grid() -->
<div class="page-header">
	<h1 class="page-title">WoodVolumes</h1>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="row margin-top-10 margin-bottom-10">
			<div class="col-md-12">
				<div class="pull-left">
					<span class="pull-left padding-top-5 padding-right-10">Rows</span>
					<select id="rows" name="rows" data-bind="value:grid().rows_per_page,valueAllowUnset" class="pull-left form-control input-sm input-mini">
						<option value="15">15</option>
						<option value="25">25</option>
						<option value="50">50</option>
					</select>
				</div>
				<div class="pull-left margin-left-15">
					<a id="add" class="btn btn-success" href="#/edit-volume/0">Add</a>
				</div>
				<div class="pull-right">
					<ul class="no-margin" data-bind="bsPagination: {'total_rows': grid().total_rows(),'page_index': grid().page_index(),'rows_per_page': grid().rows_per_page(),'onPageClick': grid().onPageClick,'onRender':grid().onRenderPagination}"></ul>
				</div>
			</div>
		</div>
		<table id="wood_volumeTable" class="table table-striped table-bordered table-hover table-condensed table-gray" sortname="name" sortorder="asc" data-bind="sortingTable: { 'onSorting': grid().changeSortOrder }">
			<thead>
				<tr>
					<th sortname="name">
						Name
					</th>
                    <th sortname="description">
                        Designation
                    </th>
                    @*<th sortname="division_name">
                        Division
                    </th>
                    <th sortname="district_name">
                        District
                    </th>
                    <th sortname="range_name">
                        Range
                    </th>
                    <th sortname="taluk_name">
                        Taluk
                    </th>
                    <th sortname="village_name">
                        Village
                    </th>*@
					<th style="width: 50px">
					</th>
				</tr>
			</thead>
			<tbody data-bind="foreach: grid().rows">
				<tr>
					<td class="cursor-pointer"><a class="fg-black" data-bind="text:name,attr:{'href': '#/edit-volume/'+id()}"></a></td>
                    <td class="cursor-pointer"><a class="fg-black" data-bind="text:description,attr:{'href': '#/edit-volume/'+id()}"></a></td>
                    @*<td class="cursor-pointer"><a class="fg-black" data-bind="text:division_name,attr:{'href': '#/edit-volume/'+id()}"></a></td>
                    <td class="cursor-pointer"><a class="fg-black" data-bind="text:district_name,attr:{'href': '#/edit-volume/'+id()}"></a></td>
                    <td class="cursor-pointer"><a class="fg-black" data-bind="text:range_name,attr:{'href': '#/edit-volume/'+id()}"></a></td>
                    <td class="cursor-pointer"><a class="fg-black" data-bind="text:taluk_name,attr:{'href': '#/edit-volume/'+id()}"></a></td>
                    <td class="cursor-pointer"><a class="fg-black" data-bind="text:village_name,attr:{'href': '#/edit-volume/'+id()}"></a></td>*@
					<td class="text-center">
						<a href="javascript:;" class="cursor-pointer fg-black" data-bind="popoverConfirm: { 'message': 'Are you sure?', 'onConfirm': deleteWoodVolume}" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-times"></i></a>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="row">
			<div class="col-md-4">
				<span data-bind="text:grid().paging_status"></span>
			</div>
			<div class="col-md-8">
				<div class="pull-right">
					<ul class="no-margin" data-bind="bsPagination: {'total_rows': grid().total_rows(),'page_index': grid().page_index(),'rows_per_page': grid().rows_per_page(),'onPageClick': grid().onPageClick,'onRender':grid().onRenderPagination}"></ul>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal-container">
</div>
<!-- /ko -->
<script type="text/html" id="modal-template">
	<div id="modal-${name}" class="modal {{if is_modal_full==true}}container{{/if}} {{if position=='top'}}modal-top{{/if}}" tabindex="-1" data-focus-on="input:first" style="display: none;">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">${title}</h4>
		</div>
		<div class="modal-body"></div>
	</div>
</script>