@{ Layout = null; }
<div class="login-content">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">
				Sign In
			</h3>
		</div>
		<div class="panel-body padding-15">
			<form method="post" class="form-validate" data-bind="submit: signIn,formValidate">
				<div class="form-group">
					<div class="input-icon">
						<i class="fa fa-envelope"></i>
						<input type="text" name="email" id="email" placeholder="Email" data-bind="value:user_name,hasFocus: user_name_focus" data-rule-required="true" data-rule-email="true" data-msg-required="Required" data-placement="bottom" data-msg-email="Invalid Email" class="form-control input-sm" />
					</div>
				</div>
				<div class="form-group">
					<div class="input-icon">
						<i class="fa fa-lock"></i>
						<input type="password" name="password" id="password" placeholder="Password" class="form-control input-sm" data-bind="hasFocus: password_focus" data-msg-required="Required" data-rule-required="true" data-placement="bottom" />
					</div>
				</div>
				<div class="form-group">
					<div class="checkbox metro-checkbox metro-checkbox-default">
						<label>
							<input type="checkbox" id="rememberme" name="rememberme" /><span class="check"></span><span>Remember Me</span>
						</label>
					</div>
				</div>
				<div class="form-group">
					<div class="pull-left">
						<button id="submit" name="submit" class="btn btn-success" data-loading-text="Sign In...">
							Sign In
						</button>
					</div>
					<div class="pull-left p-l-15">
						<span class="text-danger" data-bind="text:error_message"></span>
					</div>
					<div class="clearfix">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
