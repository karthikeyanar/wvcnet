<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WVC</title>
    @{
        string _Version = string.Empty;
        string isLocal = System.Configuration.ConfigurationManager.AppSettings["islocal"];
        if(isLocal == "false") {
            _Version = System.Configuration.ConfigurationManager.AppSettings["product-version"];
        } else {
            _Version = DateTime.Now.ToString("yyyyMMddhhmmss");
        }
    }
    <script>var _Version = '@_Version';</script>
    @*@{
            if(isLocal == "false") {
                <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
            }
        }*@
    <link href="@Url.Content("~/css/plugins/font-awesome/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/plugins/bootstrap-modal/bootstrap-modal.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/plugins/jqueryui/jquery-ui-1.10.3.autocomplete.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/plugins/select2/select2.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/plugins/select2/select2-bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/plugins/bootstrap-datepicker/bootstrap-datepicker.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/plugins/dropzone/dropzone.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/components.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/site.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/themes/sky-blue.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/custom.css")" rel="stylesheet" />


    <script src="@Url.Content("~/js/jquery/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/js/jquery/jquery.tmpl.min.js")"></script>


    <script src="@Url.Content("~/js/jquery/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/storage/jquery.storageapi.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/jqueryui/jquery-ui-1.10.3.autocomplete.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/jqueryui/jquery-ui-1.10.3.ajaxcombobox.js")"></script>
    <script src="@Url.Content("~/js/plugins/jqueryui/jquery-ui-1.10.3.autocomplete-ex.js")"></script>
    <script src="@Url.Content("~/js/plugins/jquery-floatthead/jquery.floatThead.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/select2/select2.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/blockUI/jquery.blockUI.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/dropzone/dropzone.js")"></script>
    <script src="@Url.Content("~/js/bootstrap/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/bootstrap-modal/bootstrap-modal.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/bootstrap-modal/bootstrap-modalmanager.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/pagination/jquery.twbsPagination.js")"></script>
    <script src="@Url.Content("~/js/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js")"></script>
    <script src="@Url.Content("~/js/plugins/popconfirm/jquery.popconfirm.js")"></script>
    <script src="@Url.Content("~/js/plugins/bootbox/bootbox.js")"></script>
    <script src="@Url.Content("~/js/plugins/bootstrap-confirmation/bootstrap-confirmation.js")"></script>
    <script src="@Url.Content("~/js/helper/helper-model.js")"></script>

    <script src="@Url.Content("~/js/helper/dateformat.js")"></script>
    <script src="@Url.Content("~/js/helper/common.js")"></script>
    <script src="@Url.Content("~/js/require/require-2.1.8.min.js")"></script>
    <script src="@Url.Content("~/js/require/config.js" + "?v=" + _Version)"></script>
</head>
<body class="header-fixed menu-bar-fixed no-authorize fsmall">
    <!-- header -->
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <div class="header-content container">
            <!-- navbar-header -->
            <div class="navbar-header company-info">
                <a href="/" class="navbar-brand"><i class="icon-logo"></i><span class="name">WVC</span></a>
            </div>
            <!-- end navbar-header -->
            <!-- ko if: my() -->
            <!-- navbar-header -->
            <div class="navbar-header top-menu no-auth-hide">
                <ul>
                    <!-- profile top menu -->
                    <li class="dropdown profile-menu">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <img src="/img/avatar_default.jpg" alt="photo" /><span class="profile-name" data-bind="text:my().getName"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                            <li><a href="javascript:;" data-bind="click:lockOut">Logout</a></li>
                        </ul>
                    </li>
                    <!-- end profile top menu -->
                </ul>
            </div>
            <!-- end navbar-header -->
            <!-- /ko -->
        </div>
    </div>
    <!-- end header -->
    <!-- ko if: my() -->
    <div class="menu-bar no-auth-hide">
        <nav class="navbar navbar-fixed-top" role="navigation" data-bind="initMenuBar">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="javascript:;" data-bind="text:my().getRoleName"></a>
                </div>
                <!-- menu -->
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav menu-list" data-bind="foreach: my().menus">
                        <li data-bind="css:{'active': is_active==true,'dropdown': submenus.length>0},attr:{'menu-name':name}">
                            <!-- ko if: submenus.length > 0 -->
                            <a data-bind="attr:{'href':url}" data-toggle="dropdown">
                                <!-- ko if: icon!="" --><i data-bind="css:icon"></i><!-- /ko --><span data-bind="text:name"></span><span class="caret"></span>
                            </a>
                            <!-- /ko -->
                            <!-- ko if: submenus.length <= 0 -->
                            <a data-bind="attr:{'href':url}">
                                <!-- ko if: icon!="" --><i data-bind="css:icon"></i><!-- /ko --><span data-bind="text:name"></span>
                            </a>
                            <!-- /ko -->
                            <!-- ko if: submenus.length > 0 -->
                            <ul role="menu" class="dropdown-menu" data-bind="foreach: submenus">
                                <li data-bind="css:{'active': is_active==true},attr:{'menu-name':name}">
                                    <a data-bind="attr:{'href':url}"><!-- ko if: icon!="" --><i data-bind="css:icon"></i><!-- /ko --><span data-bind="text:name"></span></a>
                                </li>
                            </ul>
                            <!-- /ko -->
                        </li>
                    </ul>
                </div>
                <!-- end menu -->
            </div>
        </nav>
    </div>
    <!-- /ko -->
    <div class="page-container container">
        <div class="page-content">
            <!-- ko if: loginModel() == null && my() == null -->
            <div style="margin-top: 100px;" class="infuser-loading">&nbsp;</div>
            <!-- /ko -->
            <!-- ko if: loginModel() -->
            <div class="login-container" data-bind="template: { name: loginModel().template, data: loginModel }">
            </div>
            <!-- /ko -->
            <!-- ko if: my() -->
            @RenderBody()
            <!-- /ko -->
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <footer>
                <p>&copy; @DateTime.Now.Year - WVC</p>
            </footer>
        </div>
    </div>
    @RenderSection("scripts",required :false)
</body>
</html>
